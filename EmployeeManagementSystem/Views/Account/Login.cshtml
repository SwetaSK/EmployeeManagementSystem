@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-5">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title text-center">Login</h4>
                        <form method="post" action="/Account/Login">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" name="username" class="form-control" required />
                            </div>

                            <div class="form-group">
                                <label>Role</label>
                                <select id="roleSelect" name="role" class="form-control">
                                    <option value="User">User</option>
                                    <option value="Admin">Admin</option>
                                </select>
                                <small class="form-text text-muted">If you select User you can view employees even if username not in DB.</small>
                            </div>

                            <div class="form-group" id="passwordGroup" style="display:none;">
                                <label>Password (required for Admin)</label>
                                <input type="password" name="password" class="form-control" />
                            </div>

                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </form>

                        @if(ViewBag.Error != null)
                        {
                            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(function(){
            $('#roleSelect').change(function(){
                if ($(this).val() === 'Admin') {
                    $('#passwordGroup').show();
                    $('#passwordGroup input').attr('required', 'required');
                } else {
                    $('#passwordGroup').hide();
                    $('#passwordGroup input').removeAttr('required');
                }
            }).trigger('change');
        });
    </script>
</body>
</html>
