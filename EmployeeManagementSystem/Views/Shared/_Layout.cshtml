<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .bg-gradient {
            background: linear-gradient(135deg, #667eea, #764ba2);
            height: 80%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background-color: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.3);
            text-align: center;
            width: 350px;
        }

            .login-card h2 {
                margin-bottom: 20px;
                color: #333;
            }

            .login-card button {
                width: 100%;
            }

        .dashboard-container {
            padding: 20px;
        }
    </style>
</head>
<body>
     @if (Session["Username"] == null)
    {
        <!-- Show login card if user is not logged in -->
        <div class="bg-gradient">
            <div class="login-card">
                <h2>Welcome!</h2>
                <p>Please login to access Employee Management System</p>
                <a href="/Account/Login" class="btn btn-primary btn-lg">Login</a>
            </div>
        </div>
    }
    else
    {
        <!-- Show normal navbar and content if logged in -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/">EmployeeMgmt</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link text-white bg-dark" href="/Employee/Index">Home</a></li>
                    @if (Session["Role"].ToString() == "Admin")
                    {
                        <li class="nav-item"><a class="nav-link" href="/Employee/Create">Add Employee</a></li>
                    }
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <span class="nav-link text-white">Welcome, @Session["Username"] (@Session["Role"])</span>
                    </li>
                    <li class="nav-item"><a class="nav-link text-white bg-dark" href="/Account/Logout">Logout</a></li>
                </ul>
            </div>
        </nav>
    }

        <div class="container mt-4">
            @RenderBody()
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>
